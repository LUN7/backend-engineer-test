		{
			"name": "create block",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const txId = pm.variables.replaceIn('{{$randomUUID}}');",
							"const height = pm.variables.get('height') ;",
							"const blockString = `${height}|${txId}`;",
							"",
							"const blockId = CryptoJS.SHA256(blockString).toString();",
							"",
							"pm.environment.set('txId', txId);",
							"pm.environment.set('blockId', blockId);",
							"",
							"console.log('Block String:', blockString);",
							"console.log('Computed Block ID:', blockId);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": \"{{blockId}}\",\n    \"height\": {{height}},\n    \"transactions\": [{\n        \"id\": \"{{txId}}\",\n        \"inputs\": [{\n            \"txId\": \"1\",\n            \"index\": 0\n        }],\n        \"outputs\": [{\n            \"address\": \"0x002\",\n            \"value\": 90000\n        }, {\n            \"address\": \"0x001\",\n            \"value\": 10000\n        }]\n    }]\n}",
					"options": {
						"raw": {
							"language": "json"
